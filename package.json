{
  "scripts": {
    "build": "npm run build:client && npm run build:server && npm run build:nui && npm run build:style",
    "build:client": "esbuild client/index.ts --bundle --format=iife --platform=node --target=es2020 --minify --outfile=build/client.js",
    "build:server": "esbuild server/index.ts --bundle --platform=node --target=es2020 --minify --outfile=build/server.js",
    "watch": "concurrently \"npm:watch:client\" \"npm:watch:server\" \"npm:watch:nui\" \"npm:watch:style\"",
    "watch:client": "esbuild client/index.ts --bundle --format=iife ---platform=node -target=es2020 --watch --outfile=build/client.js",
    "watch:server": "esbuild server/index.ts --bundle --platform=node --target=es2020 --watch --outfile=build/server.js",
    "reinstall": "rimraf package-lock.json node_modules/.package-lock.json && npm install"
  },
  "devDependencies": {
    "@trippler/tr_kit": "latest",
    "@trippler/tr_lib": "latest",
    "typescript": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "@types/node": "^20.0.0",
    "@citizenfx/client": "latest",
    "@citizenfx/server": "latest",
    "esbuild": "^0.24.2",
    "concurrently": "^8.2.0",
    "rimraf": "^6.0.1",
    "@communityox/ox_lib": "3.32.1"
  }
}